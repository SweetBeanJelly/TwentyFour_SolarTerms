<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingBottom="50dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_todayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blue2"
            android:padding="5dp"
            android:gravity="center"
            android:text="오늘 날짜" />

        <TextView
            android:id="@+id/txt_year_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WhiteGray"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="2021년 01월 월요일" />

        <TextView
            android:id="@+id/txt_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WhiteGray"
            android:gravity="center_horizontal|center_vertical"
            android:text="01"
            android:textSize="80dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_exc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WhiteGray"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:text="양력 계산" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_tfTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue2"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="50dp"
        android:text="이번 달 24절기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_timeout1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/rectangel_background"
            android:text="0 일 전" />

        <TextView
            android:id="@+id/txt_tfName1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:text="05일 소한" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_timeout2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/rectangel_background"
            android:text="0 일 전" />

        <TextView
            android:id="@+id/txt_tfName2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:text="20일 대한" />
    </LinearLayout>
</LinearLayout>